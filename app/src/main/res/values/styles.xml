<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#DD22EEFF</item>
    </style>
    <style name="AppTheme.FullScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

    </style>
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blueStatus</item>
        <item name="colorPrimaryDark">@color/blueStatus</item>
        <item name="colorAccent">@color/blueStatus</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="DarkAnimation">
        <item name="android:windowEnterAnimation">@anim/dark_fade_in</item>
        <item name="android:windowExitAnimation">@anim/dark_fade_out</item>
    </style>

    <!--TextView-->

    <style name="NormalTextView">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/textSize_normal</item>
    </style>

    <style name="NormalGreyTextView">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/textSize_normal</item>
    </style>

    <style name="SmallTextView">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/textSize_small</item>
    </style>

    <style name="SmallGreyTextView">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/textSize_small</item>
    </style>

    <style name="ProgressBarStyle" parent="android:Widget.ProgressBar.Small">
        <item name="colorAccent">#FF55FF</item>
    </style>

    <style name="RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_full</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:maxHeight">32dp</item>
    </style>
    <style name="TextInputHint" parent="TextAppearance.AppCompat.Small">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>
